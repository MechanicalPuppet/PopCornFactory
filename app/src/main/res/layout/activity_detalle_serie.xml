<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleSerie"
    android:orientation="vertical"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black">

        <ImageView
            android:id="@+id/iv_serie_imagen"
            android:layout_width="match_parent"
            android:layout_height="328dp"
            android:layout_gravity="center"
            android:src="@drawable/drwho"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_nombre_serie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr Who---------"
            android:textColor="@color/amarillo"
            android:textSize="20sp"
            android:gravity="left"/>

        <TextView
            android:id="@+id/tv_serie_desc"
            android:textColor="@color/blancoNiebla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lorem ipsum dolor sit amet, consectetur adipiscking elit sed do"
            android:textSize="20sp"/>





    </LinearLayout>

</LinearLayout>